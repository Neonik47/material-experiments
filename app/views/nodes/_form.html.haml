= form_for @node do |f|
  -if @node.errors.any?
    #error_explanation
      %h2= "#{pluralize(@node.errors.count, "error")} prohibited this node from being saved:"
      %ul
        - @node.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :parent_id
  .field
    Название
    = f.text_field :name

  .actions
    = f.submit 'Сохранить',:class=>"green button"
    = link_to 'Назад', nodes_path,:class=>"blue button"
