= form_for @impact do |f|
  -if @impact.errors.any?
    #error_explanation
      %h2= "#{pluralize(@impact.errors.count, "error")} prohibited this impact from being saved:"
      %ul
        - @impact.errors.full_messages.each do |msg|
          %li= msg

  .field
    Название
    = f.text_field :name
  .field
    = f.fields_for :impacts_params do |builder|
      = render "impacts_param_fields", :f => builder
    = link_to_add_fields "Добавить параметр", f, :impacts_params
  .actions
    = f.submit 'Сохранить', :class=>"green button"
    = link_to 'Назад', impacts_path, :class=>"blue button"
