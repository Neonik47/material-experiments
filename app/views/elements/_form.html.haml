= form_for @element do |f|
  - if @element.errors.any?
    #error_explanation
      %h2= "#{pluralize(@element.errors.count, "error")} prohibited this element from being saved:"
      %ul
        - @element.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sign
    = f.text_field :sign
  .field
    = f.label :atnum
    = f.number_field :atnum
  .field
    = f.label :atm
    = f.text_field :atm
  .actions
    = f.submit 'Save'
